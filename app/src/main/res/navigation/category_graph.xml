<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_graph"
    app:startDestination="@id/professionFragment">

    <fragment
        android:id="@+id/professionFragment"
        android:name="com.atria.myapplication.ProfessionFragment"
        android:label="fragment_profession"
        tools:layout="@layout/fragment_profession" >
        <action
            android:id="@+id/action_professionFragment_to_topicFragment"
            app:destination="@id/topicFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/topicFragment"
        android:name="com.atria.myapplication.TopicFragment"
        android:label="fragment_topic"
        tools:layout="@layout/fragment_topic" />
    <fragment
        android:id="@+id/usernameFragment"
        android:name="com.atria.myapplication.UsernameFragment"
        android:label="fragment_username"
        tools:layout="@layout/fragment_username" />
</navigation>