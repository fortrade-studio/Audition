<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black"
    tools:context=".UploadAuditionFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/uploadAuditionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/amiko_semibold"
        android:text="UPLOAD AUDITION"
        android:textColor="@color/colorOnPrimary"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/uploadIntroTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="476dp"
        android:fontFamily="@font/amiko_semibold"
        android:text="*Upload a video explaining about the requirements"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoURIdisplayTextview" />

    <ImageView
        android:id="@+id/uploadVideoImageView"
        android:layout_width="106dp"
        android:layout_height="111dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadAuditionTextView" />

    <VideoView
        android:id="@+id/uploadVideoVideoView"
        android:layout_width="106dp"
        android:layout_height="111dp"
        android:alpha="0"
        android:src="@drawable/ic_upload"
        app:layout_constraintBottom_toBottomOf="@+id/uploadVideoImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadAuditionTextView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/categoryOfAuditionTextview"
        android:layout_width="183dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Category of Audition:"
        android:textColor="@color/colorOnPrimary"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadIntroTextView" />

    <TextView
        android:id="@+id/videoURIdisplayTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadVideoImageView" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/categoryOfAuditionTextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/categoryOfAuditionTextview"
        app:layout_constraintTop_toTopOf="@+id/categoryOfAuditionTextview" />


    <TextView
        android:id="@+id/positionOfArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Position of Artist:"
        android:textColor="@color/colorOnPrimary"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/categoryOfAuditionTextview"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="  Type here"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:textColorHint="#d3d3d3"
        app:layout_constraintEnd_toEndOf="@+id/writeDescriptionTextview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/writeDescriptionTextview"
        app:layout_constraintTop_toBottomOf="@+id/writeDescriptionTextview" />

    <EditText
        android:id="@+id/positionOfArtistEditText"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="76dp"

        android:background="@color/white"
        android:textColorHint="#d3d3d3 "
        app:layout_constraintBottom_toBottomOf="@+id/positionOfArtist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toEndOf="@+id/positionOfArtist"
        app:layout_constraintTop_toTopOf="@+id/positionOfArtist"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/writeDescriptionTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Description"
        android:textColor="@color/colorOnPrimary"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/positionOfArtist" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/postAuditionButton"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.AuditionButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Post Audition"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>