<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Audition" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">#F57F17</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Audition.Home" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">#F57F17</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Edit Text -->

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Widget.Button.AuditionButton">
        <item name="android:background">@drawable/button_rounded_rect</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/amiko_semibold</item>
    </style>

    <style name="Base.Widget.AppCompat.EditText.AuditionEditText">
        <item name="android:background">@color/blackish</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#EAEAEA</item>
        <item name="fontFamily">@font/amiko_semibold</item>
    </style>

    <style name="Widget.AppCompat.TextView.AuditionTextView">

        <item name="fontFamily">@font/amiko_semibold</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Widget.AppCompat.Spinner.DropDown.AuditionSpinner">
        <item name="android:textColor">@color/white</item>
    </style>

